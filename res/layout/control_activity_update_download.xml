<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/text_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/update_zero_percent"
            android:textColor="@color/update_text_color"
            android:textSize="@dimen/textsize_small" />

        <ProgressBar
            android:id="@+id/progressbar_download"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/install_seekbar" />

        <Button
            android:id="@+id/button_update_stop"
            android:layout_width="300dp"
            android:layout_height="@dimen/main_btn_modifyname_height"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_select_bg"
            android:focusable="true"
            android:text="@string/update_cancel"
            android:textColor="@color/update_text_color"
            android:textSize="@dimen/textsize_small" >

            <requestFocus />
        </Button>
    </LinearLayout>

</FrameLayout>