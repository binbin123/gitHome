<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="36dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/popup_full_dark" >

        <Button
            android:id="@+id/clean_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/progress_memory"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_playbar_clean" />

        <TextView
            android:id="@+id/clean_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/clean_ico"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="55dp"
            android:text="@string/cleaning"
            android:textColor="#f1f1f1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/clean_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/clean_state"
            android:layout_alignRight="@+id/progress_memory"
            android:textColor="#f1f1f1"
            android:textSize="20sp" />

        <letv.widget.LetvProgressBar
            android:id="@+id/progress_memory"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="65dp"
            android:indeterminate="false"
            />
    </RelativeLayout>

</RelativeLayout>
