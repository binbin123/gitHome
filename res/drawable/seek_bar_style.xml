<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
    <item android:id="@android:id/background" android:drawable="@drawable/play_seek_bar_bg_black"/>
    <item android:id="@android:id/secondaryProgress" android:drawable="@drawable/play_seek_bar_bg_black"/>
    <item android:id="@android:id/progress" android:drawable="@drawable/play_seek_bar_bg_blue"/>
    -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />
            <gradient
                android:angle="270"
                android:centerColor="#353535"
                android:centerY="0.45"
                android:endColor="#353535"
                android:startColor="#353535" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">  
         <clip>  
             <shape>  
                 <corners android:radius="10dip" />  
                 <gradient  
                         android:startColor="#858585"  
                         android:centerColor="#858585"  
                         android:centerY="0.45"  
                         android:endColor="#858585"  
                         android:angle="270"  
                 />  
             </shape>  
         </clip>  
     </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#00A0E9"
                    android:centerY="0.45"
                    android:endColor="#00A0E9"
                    android:startColor="#00A0E9" />
            </shape>
        </clip>
    </item>

</layer-list>